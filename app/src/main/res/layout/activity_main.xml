<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    >
    <TextView
        android:id="@+id/tvWordTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvWordCounter1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvWordTitle2"
        android:text="Car"
        />
    <TextView
        android:id="@+id/tvWordTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvWordTitle1"
        app:layout_constraintBottom_toBottomOf="@id/tvWordTitle1"
        app:layout_constraintStart_toEndOf="@id/tvWordTitle1"
        app:layout_constraintEnd_toStartOf="@id/tvWordTitle3"
        android:text="Air"
        />
    <TextView
        android:id="@+id/tvWordTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvWordTitle1"
        app:layout_constraintBottom_toBottomOf="@id/tvWordTitle1"
        app:layout_constraintStart_toEndOf="@id/tvWordTitle2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Key"
        />
    <TextView
        android:id="@+id/tvWordCounter1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvWordTitle1"
        app:layout_constraintBottom_toTopOf="@id/historyTitle"
        app:layout_constraintStart_toStartOf="@id/tvWordTitle1"
        app:layout_constraintEnd_toEndOf="@id/tvWordTitle1"
        android:text="0"
        />
    <TextView
        android:id="@+id/tvWordCounter2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvWordCounter1"
        app:layout_constraintBottom_toBottomOf="@id/tvWordCounter1"
        app:layout_constraintStart_toStartOf="@id/tvWordTitle2"
        app:layout_constraintEnd_toEndOf="@id/tvWordTitle2"
        android:text="0"
        />
    <TextView
        android:id="@+id/tvWordCounter3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvWordCounter1"
        app:layout_constraintBottom_toBottomOf="@id/tvWordCounter1"
        app:layout_constraintStart_toStartOf="@id/tvWordTitle3"
        app:layout_constraintEnd_toEndOf="@id/tvWordTitle3"
        android:text="0"
        />
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvWordCounter1"
        app:layout_constraintBottom_toTopOf="@id/rvSearchHistory"
        android:layout_marginTop="30dp"
        android:text="История запросов"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>